# Set ls return colored results
alias ls="ls --color=auto"

# Set aliases for exa
alias l="exa -F"
alias lt='exa -TF --level=2'
alias ll="exa -laF --time-style=long-iso"
alias la="exa -labTFh --color-scale --level=2 --git --time-style=long-iso --octal-permissions"
alias lx="exa -labTFhHimSuU@ --color-scale --level=2 --git --time-style=long-iso --octal-permissions"

# Set alias to open directory
alias open="explorer.exe"
