[core]
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes
[init]
    defaultBranch = main
[commit]
    gpgsign = true
[color]
    ui = auto
    diff = auto
    status = auto
    interactive = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[help]
    autocorrect = 1
[pull]
    rebase = true
[merge]
    ff = only
[url "git@github.com:"]
    pushInsteadOf = https://github.com/
    pushInsteadOf = git://github.com/
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
